{
	"luci-app-adguardhome": {
		"description": "Grant permissions for the AdGuard Home LuCI app",
		"read": {
			"ubus": {
				"service": [ "list" ],
				"luci.adguardhome": [ "*" ]
			},
			"uci": [ "adguardhome" ],
			"file": {
				"/sbin/logread": [
					"stat",
					"exec"
				],
				"/sbin/logread -e AdGuardHome": [
					"exec"
				],
				"/etc/init.d/dnsmasq": [ "exec" ],
				"/etc/init.d/firewall": [ "exec" ]
			}
		},
		"write": {
			"uci": [ "adguardhome" ]
		}
	}
}
